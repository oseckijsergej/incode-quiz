extends ../layout.jade
block content
    form.form-horizontal.col-md-4.col-md-offset-4(action="/login", method='POST')
        .form-group
            label.col-md-4.control-label.text-left(for='login') Логин
            .col-md-8
                input.form-control(type='text', name='login')
        .form-group
            label.col-md-4.control-label(for='password') Пароль
            .col-md-8
                input.form-control(type='password', name='password')
        .form-actions
            button.col-md-12.btn.btn-primary(type='submit') Войти