extends ../layout.jade
block content
    form.form-horizontal.col-md-4.col-md-offset-4(action="/account", method='POST')
        .form-group
            label.col-md-4.control-label(for='login') Логин
            .col-md-8
                input.form-control(type='text', name='login')
        .form-group
            label.col-md-4.control-label.text-left(for='email') Email
            .col-md-8
                input.form-control(type='text', name='email')
        .form-group
            label.col-md-4.control-label(for='password') Пароль
            .col-md-8
                input.form-control(type='password', name='password')
        .form-actions
            button.col-md-12.btn.btn-primary(type='submit') Зарегистрироваться